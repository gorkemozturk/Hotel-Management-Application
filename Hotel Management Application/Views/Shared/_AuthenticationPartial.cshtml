@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Logout" ? "active" : "")">
            <a asp-action="Index" asp-controller="Logout" class="nav-link">
                <i class="fa fa-power-off"></i>
                Logout
            </a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Login" ? "active" : "")">
            <a asp-action="Index" asp-controller="Login" class="nav-link">Login</a>
        </li>
        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Register" ? "active" : "")">
            <a asp-action="Index" asp-controller="Register" class="nav-link">Register</a>
        </li>
    </ul>
}